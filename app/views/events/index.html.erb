<% if user_signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>      
    </aside>
    <div class="span8">
      <%= render 'events/events_list'%>
    </div>    
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to the Event App</h1>

    <h2>
      This is the home page for the
     Events managing application.
    </h2>

    <%= link_to "Sign up now!", new_user_registration_path,
                                class: "btn btn-large btn-primary" %>
  </div>
<% end %>
