<h2>Edit your event</h2>

<div class="row">
  <div class="span6 offset5">
    <%= form_for  [current_user, @event] do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :event_title %>
      <%= f.text_field :event_title %>

      <%= f.label :scheduled_at %>
      <%= f.date_select( :scheduled_at, order: [:day, :month, :year]) %>

      <%= f.label :recurrence %>
      <%= f.select :recurrence, options_for_select(['', 'Daily', 'Weekly', 
                                                 'Every month', 'Every year'])%>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <div>
        <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
      </div>

    <% end %>   
  </div>
</div>
