<li>  
  <span class="event_title">
    <% if current_user == event.user %>
      <%= link_to event.event_title, edit_event_path(event.id) %>
    <% else %>
      <%= event.event_title %>
    <% end%>
  </span>
  <span class="timestamp">
    Scheduled at <%= time_tag(event.scheduled_at.to_date) %> <%= event.recurrence %>.
  </span>
  <span class="content">
    <%= simple_format(event.description) %>
  </span>
  <% if current_user == event.user %>
    <%= link_to "delete", event, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: event.event_title %>
  <% else %>
    Created by <%= event.user.email %>   
  <% end %>
</li>
